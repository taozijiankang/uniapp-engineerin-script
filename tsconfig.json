{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "incremental": false,
    "isolatedModules": true,
    "module": "NodeNext",
    "moduleDetection": "force",
    "moduleResolution": "NodeNext",
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": [
    "./src/**/*",
    "./src/types/*"
  ]
}